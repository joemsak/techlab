<ul class="nav nav-tabs">

  <% # REFACTOR SMELL -- Primitive Obsession %>

  <% @channels.keys.each_with_index do |year, i| %>
    <li class="nav-item">
      <%= link_to year, "#channels_#{year}", class: "nav-link #{'active' if i == 0}",
                                             data: { toggle: "tab" } %>
    </li>
  <% end %>
</ul>

<div class="tab-content">
  <% @channels.keys.each_with_index do |year, i| %>
    <div class="tab-pane <%= 'active' if i == 0 %>" id="channels_<%= year %>">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th width="500">Description</th>
            <th>Image</th>
            <th>Last updated</th>
          </tr>
        </thead>

        <tbody>
          <% @channels[year].each do |channel| %>
            <tr>
              <td><%= channel.name %></td>
              <td><%= channel.description %></td>
              <td><%= image_tag channel.asset_url, height: 100, alt: channel.name %></td>
              <td><%= channel.updated_at.strftime("%b %e, %Y %l:%M%P") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
