<tr class="channel-row">
  <td class="channel-name"><%= channel.name %></td>

  <td class="channel-description"><%= channel.description %></td>

  <td class="channel-image">
    <%= image_tag channel.asset_url, height: 100, alt: channel.name %>
  </td>

  <td class="channel-date-added">
    <%= channel.created_at.strftime("%b %e, %Y") %>
  </td>

  <td class="channel-time-modified">
    <%= channel.updated_at.strftime("%b %e, %Y %l:%M%P") %>
  </td>
</tr>
